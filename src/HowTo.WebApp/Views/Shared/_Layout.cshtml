@using HowTo.WebApp.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - How To</title>
    <link rel="icon" type="image/png" href="~/favicon.png"/>
    <link rel="stylesheet" type="text/css" href="~/css/lib/bootstrap-5.1.3.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/how-to.css"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">How To</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Register" class="nav-link">Register</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Events" asp-action="Index" class="nav-link">Events</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" id="app-container">
        @RenderBody()
    </div>

    <!--insert footer-->
    
    <div id="modals"></div><!--this is so the how to modals can render...although, maybe we can do this better-->

    <input type="hidden" id="app-version" value="@AppVersion.QueryString"/>

    <script type="text/javascript" src="~/js/lib/require-2.3.6.min.js"></script>
    <script type="text/javascript" src="~/js/requireConfig.js?@AppVersion.QueryString"></script>
    @RenderSection("Scripts", false)
</body>
</html>
