@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <script type="text/javascript" src="~/js/app/IndexViewModel.js"></script>
}

<h1>Welcome</h1>
<hr />

<calendar-component></calendar-component>

<div data-bind="with: currentEvent">
    <div class="mb-3">
        <label>Title</label>
        <input type="text" class="form-control" data-bind="value: title" />
    </div>
    <div class="mb-3">
        <label>Start Date</label>
        <input type="text" class="form-control" data-bind="value: startDate" />
    </div>
    <div class="mb-3">
        <label>Start Time</label>
        <input type="text" class="form-control" data-bind="value: startTime" />
    </div>
    <div class="mb-3">
        <label>End Date</label>
        <input type="text" class="form-control" data-bind="value: endDate" />
    </div>
    <div class="mb-3">
        <label>End Time</label>
        <input type="text" class="form-control" data-bind="value: endTime" />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea class="form-control" data-bind="value: description"></textarea>
    </div>
</div>

<input type="hidden" id="api-url" value="@Model.ApiUrl"/>