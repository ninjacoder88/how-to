@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <script type="text/javascript" src="~/js/app/RegisterViewModel.js"></script>
}

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="card bg-dark text-white">
            <div class="card-header">
                Create Account
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label>Username</label>
                    <input type="text" class="form-control" id="usernameInput" data-bind="value: username"/>
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input type="password" class="form-control" id="passwordInput" data-bind="value: password" />
                </div>
                <div class="mb-3">
                    <label>Email Address</label>
                    <input type="text" class="form-control" id="emailInput" data-bind="value: emailAddress" />
                </div>
                <button type="button" class="btn btn-primary" id="registerButton" data-bind="click: register, disable: registering">Register</button>
                <div data-bind="visible: registrationFailed">
                    <div class="alert alert-danger">
                        <span>Registration failed!</span>
                        <br/>
                        <span data-bind="text: errorMessage"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>